{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "types": ["node", "jest"]
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "**/*.js"
    ]
}